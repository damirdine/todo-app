{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
    <h1>Categories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCategory</th>
                <th>LibelleCategory</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.idCategory }}</td>
                <td>{{ category.libelleCategory }}</td>
                <td>
                    <a href="{{ path('app_categories_show', {'idCategory': category.idCategory}) }}">show</a>
                    <a href="{{ path('app_categories_edit', {'idCategory': category.idCategory}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categories_new') }}">Create new</a>
{% endblock %}
