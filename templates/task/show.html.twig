{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdTask</th>
                <td>{{ task.idTask }}</td>
            </tr>
            <tr>
                <th>NameTask</th>
                <td>{{ task.nameTask }}</td>
            </tr>
            <tr>
                <th>DescriptionTask</th>
                <td>{{ task.descriptionTask }}</td>
            </tr>
            <tr>
                <th>CreatedDateTask</th>
                <td>{{ task.createdDateTask ? task.createdDateTask|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DueDateTask</th>
                <td>{{ task.dueDateTask ? task.dueDateTask|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PriorityTask</th>
                <td>{{ task.priorityTask }}</td>
            </tr>
            <tr>
                <th>CategoryTask</th>
                <td>{{ task.category }}</td>
            </tr>
        </tbody>
    </table>
    <div style="display:flex">
        <a class="btn mx-2" href="{{ path('app_task_index') }}">back to list</a>

        <a class="btn mx-2" href="{{ path('app_task_edit', {'idTask': task.idTask}) }}">edit</a>

        {{ include('task/_delete_form.html.twig') }}
    </div>
{% endblock %}
